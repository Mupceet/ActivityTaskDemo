<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mupceet.activitytaskdemo2.MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_to_other_with_affinity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/other_activity_with_affinity" />

    <Button
        android:id="@+id/btn_to_demo_single_instance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/to_demo_single_instance" />

    <Button
        android:id="@+id/btn_to_demo_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/to_demo_standard" />

    <Button
        android:id="@+id/btn_to_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/standard_activity" />
</LinearLayout>
